@using JokesApp.Data.Enum
@using JokesApp.ViewModels
@model JokeViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form method="post" asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="JokeContent">Joke</label>
        <input asp-for="JokeContent" class="form-control" placeholder="Add your joke...">
        <span asp-validation-for="JokeContent" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Category">Joke category</label>
        <select asp-for="Category" class="form-control">
            <option>--Choose--</option>
            @foreach (JokesCategory jokesCategory in Enum.GetValues(typeof(JokesCategory)))
            {
                <option value="@jokesCategory">@jokesCategory</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Add</button>
</form>