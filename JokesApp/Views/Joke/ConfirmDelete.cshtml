@using JokesApp.ViewModels
@model JokeDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container mt-5">
    <h2 class="text-danger">Confirm Delete</h2>
    <p>Are you sure you want to delete this joke?</p>
    <h4 class="fw-bold">@Model.JokeContent</h4>
    <p>Category: <strong>@Model.Category</strong></p>
    <p>Created At: <strong>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</strong></p>

    <form method="post" asp-action="Delete" asp-route-id="@Model.JokeId">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>